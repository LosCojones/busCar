<div class="contenedor" style="width:85%; margin:20px auto; margin-bottom: 25px">
  <div class="row">
    <div class="col-xs-4">
      <div class="fotocoche">
        <img src="img/foto1.jpg">
      </div>
    </div>
    <div class="col-xs-8" style="margin: 0 auto">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h1 class="panel-title">Información del vehículo</h1>
        </div>
        <div class="panel-body">
          <p>
            Marca: <%= @vehiculo.marca%>  -  Modelo: <%= @vehiculo.modelo %>
            <p> </p>Combustible: <%= @vehiculo.combustible %>
            <p></p>Kilometraje: <%= @vehiculo.kms %>
            <p></p>Fecha de matriculación: <%= @vehiculo.fecha_matriculacion %>
            <p></p>Descripción: <%= @vehiculo.descripcion %>
            <p></p>Comprar ya: <%= @subasta.valor_compra %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4" style="margin-top: 25px">
      <div class="row">
        <div class="panel panel-info">
          <div class="panel-heading">
            <h2 class="panel-title">Información del ofertante</h2>
          </div>
          <div class="panel-body">
            <p>
              Usuario nº: <%= @usuario.id%>
              <p></p>Nombre: <%= @usuario.nombre%>
              <p> </p>Nombre de usuario: <%= @usuario.nombre_usuario %>
              <p></p>Email: <%= @usuario.email %>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <button class="btn btn-secondary" ; style="display:block; margin: 0 auto;"
                onclick="document.getElementById('modalInicioSesion').style.display='block'"> Contactar
        </button>
      </div>
    </div>
    <div class="col-xs-8">
      <div class="carrusel" style="width:70%; margin: 0 auto; margin-top:25px">
        <div class="carousel slide" data-ride="carousel" id="carousel-1">
          <div class="carousel-inner" role="listbox">
            <div class="item active"><img
            src="http://placeholdit.imgix.net/~text?txtsize=42&amp;w=1400&amp;h=600"
            alt="Slide Image"/></div>
            <div class="item"><img
            src="http://placeholdit.imgix.net/~text?txtsize=42&amp;w=1400&amp;h=600"
            alt="Slide Image"/></div>
            <div class="item"><img
            src="http://placeholdit.imgix.net/~text?txtsize=42&amp;w=1400&amp;h=600"
            alt="Slide Image"/></div>
          </div>
          <div><a class="left carousel-control" href="#carousel-1" role="button" data-slide="prev"><i
          class="glyphicon glyphicon-chevron-left"></i><span class="sr-only">Previous</span></a>
            <a class="right carousel-control" href="#carousel-1" role="button" data-slide="next"><i
            class="glyphicon glyphicon-chevron-right"></i><span class="sr-only">Next</span></a>
          </div>
          <ol class="carousel-indicators">
            <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-1" data-slide-to="1"></li>
            <li data-target="#carousel-1" data-slide-to="2"></li>
          </ol>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div style="border: 1px black solid; margin-top:15px"></div>
    <%= render 'pujas/lista' %>
    <div class="col-xs-4">
      <div class="row">
        <button class="btn btn-secondary" style="display:block; margin: 0 auto;margin-top:40px"
                onclick="document.getElementById('modalInicioSesion').style.display='block'"> !Compra YA!
        </button>
      </div>
      <div class="row">
        <button class="btn btn-secondary" style="display:block; margin: 0 auto; margin-top:25px;"
                onclick="document.getElementById('modalInicioSesion').style.display='block'"> Pujar
        </button>
      </div>
    </div>
  </div>
</div>